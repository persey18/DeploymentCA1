= image_tag @post.image.url(:medium)
%h1= @post.title
%p= @post.contact
%p= @post.description
%p= @post.user.name

#comment
  %h2.comment_count= pluralize(@post.comments.count, "Comment") # pluralize means anthing more then 1 and a "s" at the end --comments
  - @comments.each do |comment| #loop throught the comments
    .comment
      %p.username= comment.user.name
      %p.content= comment.content
        
  =render 'comments/form'
        
=link_to "Edit", edit_post_path(@post)
=link_to "Destroy", post_path(@post), method: :delete, data: { confirm:"Are you sure?" }
=link_to "Home", root_path #link you back to the home page 
